# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
D1_DATABASE_ID=your_d1_database_id_here
R2_BUCKET_NAME=cardpress-storage

# Worker Configuration
WORKER_URL=https://cardpress-refresh.your-subdomain.workers.dev

# GitHub Configuration (for GitHub Pages deployment)
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_REPO=your-username/your-repo-name
GITHUB_DEPLOY_BRANCH=gh-pages

# Admin Authentication
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Deployment Configuration
# Cloudflare Pages
CLOUDFLARE_PAGES_PROJECT=cardpress-blog

# Custom Server (rsync)
DEPLOY_HOST=your-server.com
DEPLOY_PATH=/var/www/html
DEPLOY_USER=deploy

# Deploy Webhook (for UI deploy button)
DEPLOY_WEBHOOK_URL=https://your-server.com/webhook/deploy

# Refresh Webhook (optional)
REFRESH_WEBHOOK_URL=https://your-webhook-endpoint.com/refresh

# Legacy Firebase (for migration only - can be removed after migration)
FIREBASE_SERVICE_ACCOUNT=serviceAccountKey.json
FIREBASE_BUCKET_NAME=your-project.firebasestorage.app